# the following commands in the root folder of your working copy.
#
#   mkdir build    # The 'build' folder will be used as the build location.
#   cd build
#   doxygen ../src/doc/api/Doxyfile
#   cp -R ../src/doc/bdml .
#   cp -R ../src/doc/resources .
#

